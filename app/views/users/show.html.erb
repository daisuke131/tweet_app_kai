<div class="main user-show">
  <div class="container">
    <div class="user">
      <% if @user.image_url %>
      <%= image_tag @user.image_url(:thumb) %>
      <% else %>
      <%= image_tag '/user_images/default_image.jpg', :size => '100x100' %>
      <% end %>
      <h2>
        <%= @user.name %>
      </h2>
      <p>
        <%= @user.email %>
      </p>
      <% if current_user.id == @user.id %>
      <%= link_to("編集", edit_user_registration_path) %>
      <% end %>
    </div>
  </div>
</div>