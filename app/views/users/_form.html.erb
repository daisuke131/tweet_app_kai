<div class="form users-form">
    <div class="form-body">
        <%= form_for(@user, {multipart: true}) do |f| %>
        <p>ユーザー名</p>
        <% if @user.errors.full_messages_for(:name).any? %>
        <div class="form-error">
            <%= @user.errors.full_messages_for(:name)[0] %>
        </div>
        <% end %>
        <p>
            <%= f.text_field :name %>
        </p>
        <p>メールアドレス</p>
        <% if @user.errors.full_messages_for(:email).any? %>
        <div class="form-error">
            <%= @user.errors.full_messages_for(:email)[0] %>
        </div>
        <% end %>
        <p>
            <%= f.text_field :email, placeholder: 'sample@example.com' %>
        </p>
        <% if current_page?(signup_path) %>
        <p>パスワード</p>
        <% if @user.errors.full_messages_for(:password).any? %>
        <div class="form-error">
            <%= @user.errors.full_messages_for(:password)[0] %>
        </div>
        <% end %>
        <p>
            <%= f.text_field :password %>
        </p>
        <% elsif current_page?(edit_user_path) %>
        <p>
            <%= f.file_field :image %>
        </p>
        <% end %>
        <p>
            <%= f.submit %>
        </p>
        <% end %>
    </div>
</div>